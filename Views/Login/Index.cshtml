
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<div class="page-center">
    <div class="page-center-in">

        <div class="container-fluid">
            <form method="post" action="~/Login/loginForm" class="sign-box">
                @using (Html.BeginForm("Login/loginForm", "Usuario", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    if (@ViewBag.ViewBagProperty != null)
                    {
                        <div style="border:1px solid red">
                            @ViewBag.ViewBagProperty
                        </div>
                    }


                    <div class="sign-avatar">
                        <img src="~/Scripts/imagens/avatar-sign.png" alt=" Ristore programa de fidelidade">
                    </div>
                    <header class="sign-title">Login</header>

                    <div class="form-group">
                        <input type="text" name="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <input type="password" name="Senha" class="form-control" placeholder="Senha" required />
                    </div>


                    <div class="form-group">
                        <div class="checkbox float-left">
                            <input type="checkbox" id="signed-in" />
                            <label for="signed-in">Lembrar acesso</label>
                        </div>
                        <div class="float-right reset">
                            <a href="~/Login/Recuperar">Esqueci minha senha?</a>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-rounded">Entrar</button>
                    <p class="sign-note">Caso ainda não apresente cadastro <a href="~/usuario/">Cadastrar-se</a></p>
                }
                <!--<button type="button" class="close">

        <span aria-hidden="true">&times;</span>
    </button>-->
            </form>

        </div>

    </div>
</div><!--.page-center-->


<script src="~/Scripts/scripts/lib/match-height/jquery.matchHeight.min.js" type="text/javascript"></script>
<script>
    $(function () {
        $('.page-center').matchHeight({
            target: $('html')
        });

        $(window).resize(function () {
            setTimeout(function () {
                $('.page-center').matchHeight({ remove: true });
                $('.page-center').matchHeight({
                    target: $('html')
                });
            }, 100);
        });
    });</script>
<script src="~/Scripts/scripts/app.js"></script>

