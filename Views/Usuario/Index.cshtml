
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Paginas.cshtml";
}


<div class="page-center">
    <div class="page-center-in">
        <div class="container-fluid">
            <form class="sign-box" method="post" action="~/Usuario/CadastroUsuario">
                <div class="sign-avatar no-photo">&plus;</div>
                <header class="sign-title">Cadastro Usuário</header>
                <div class="form-group">
                    <input name="Nome" type="text" class="form-control" placeholder="Nome Completo:" pattern="[a-zA-Z\s]+$" required />
                </div>
                <div class="form-group">
                    <input name="Email" type="email" class="form-control" placeholder="Email: email@email.com" required />
                </div>
                <div class="form-group">
                    <input name="Cpf" type="text" class="form-control" placeholder="Cpf: 000.000.000-00" pattern="[0-9]{3}\.?[0-9]{3}\.?[0-9]{3}\-?[0-9]{2}" required />


                </div>
                <div class="form-group">
                    <input name="DataNascimento" type="datetime" class="form-control" placeholder="Data Nascimento: dd/mm/aaaa"
                           data-mask="00/00/0000" required />

                </div>
                <div class="form-group">
                    <input name="Sexo" type="text" class="form-control" placeholder="Sexo" required />
                </div>
                <div class="form-group">
                    <input name="Telefone" type="text" class="form-control" placeholder="Telefone: (00) 00000-0000" required />
                </div>
                <!--
                <div class="form-group">
                    <input name="Login" type="text" class="form-control" placeholder="" required />
                </div>
                    -->
                <div class="form-group">
                    <input name="Senha" type="password" class="form-control" placeholder="Senha:******" required />
                </div>

                <button type="submit" class="btn btn-rounded btn-success sign-up">Cadastrar</button>
                <p class="sign-note">Possuo uma conta? <a href="~/Login/">Acessar</a></p>
                <!--<button type="button" class="close">
                    <span aria-hidden="true">&times;</span>
                </button>-->
            </form>
        </div>
    </div>
</div><!--.page-center-->
<script src="~/Scripts/scripts/lib/jquery/jquery-3.2.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/scripts/lib/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/scripts/lib/popper/popper.min.js"></script>

<script type="text/javascript" src="~/Scripts/scripts/lib/match-height/jquery.matchHeight.min.js"></script>
<script>
    $(function () {
        $('.page-center').matchHeight({
            target: $('html')
        });

        $(window).resize(function () {
            setTimeout(function () {
                $('.page-center').matchHeight({ remove: true });
                $('.page-center').matchHeight({
                    target: $('html')
                });
            }, 100);
        });
    });</script>

