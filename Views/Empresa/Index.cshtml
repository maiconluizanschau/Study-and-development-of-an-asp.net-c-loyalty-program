
@{
    ViewBag.Title = "Cadastrar Empresa";
}

<br />
<br />
<br />

<div class="page-center">
    <div class="page-center-in">
        <div class="container-fluid">
            <form class="sign-box" method="post" action="~/Empresa/CadastroEmpresa">
                <div class="sign-avatar no-photo">&plus;</div>
                <header class="sign-title">Cadastrar Empresa</header>
                <div class="form-group">
                    <input name="Nome" class="form-control" placeholder="Nome Empresa" required />
                </div>
                <div class="form-group">
                    <input name="Cnpj" class="form-control" placeholder="CNPJ" pattern="[0-9]{2}\.?[0-9]{3}\.?[0-9]{3}\/?[0-9]{4}\-?[0-9]{2}" required />
                </div>
                <div class="form-group">
                    <input name="email" class="form-control" placeholder="Email:" required />
                </div>
                <div class="form-group">
                    <input name="Cidade" class="form-control" placeholder="Cidade:" required />
                </div>
                <div class="form-group">
                    <input name="Telefone" class="form-control" placeholder="Telefone:" required />
                </div>
                <button type="submit" class="btn btn-rounded btn-success sign-up">Cadastrar</button>
                <!--<button type="button" class="close">
        <span aria-hidden="true">&times;</span>
    </button>-->
            </form>
    </div>
    </div>
</div><!--.page-center-->
<script src="~/Scripts/scripts/lib/jquery/jquery-3.2.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/scripts/lib/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/scripts/lib/popper/popper.min.js"></script>

<script type="text/javascript" src="~/Scripts/scripts/lib/match-height/jquery.matchHeight.min.js"></script>
<script>
    $(function () {
        $('.page-center').matchHeight({
            target: $('html')
        });

        $(window).resize(function () {
            setTimeout(function () {
                $('.page-center').matchHeight({ remove: true });
                $('.page-center').matchHeight({
                    target: $('html')
                });
            }, 100);
        });
    });</script>
